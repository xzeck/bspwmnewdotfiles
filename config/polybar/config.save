[colors]
background = #fa1e2137 
foreground = #e3eaf3
primary = #02c084
secondary = #65a2d9
tertiary = #d07ef2
fourth = #e5c246
alert = #ed404c


[bar/main]
width = 100%:-48
offset-x = 24
offset-y = 10

height = 36
radius = 0.6

;override-redirect = true
wm-restack = bspwm

background = ${colors.background}
foreground = ${colors.foreground}

padding-left = 1
padding-right = 2
module-margin-left = 2
module-margin-right = 1

font-0 = Hack Nerd Font:pixelsize=11:antialias=true;2.5
font-1 = Hack Nerd Font:style=Regular:pixelsize=17:antialias=true;3

modules-left = bspwm
modules-center = xwindow
modules-right = audio wlan battery date powermenu

cursor-click = pointer
cursor-scroll = ns-resize


[module/xwindow]
type = internal/xwindow
label = %title:0:25:...%


[module/filesystem]
type = internal/fs
interval = 25111
mount-0 = /
label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground}


[module/bspwm]
type = internal/bspwm
pin-workspaces = false
strip-wsnumbers = true
index-sort = true
enable-click = false
enable-scroll = false
wrapping-scroll = false
reverse-scroll = false
fuzzy-match = true

ws-icon-default = "ÔÑë  "
ws-icon-0 = "0;0  "
ws-icon-1 = "1;%{T2}Óúå%{T-}  "
ws-icon-2 = "2;%{T2}Óûï%{T-}  "
ws-icon-3 = "3;Ôâ©  "
ws-icon-4 = "4;4  "
ws-icon-5 = "5;5  "
ws-icon-6 = "6;6  "
ws-icon-7 = "7;7  "
ws-icon-8 = "8;ÔÅª  "
ws-icon-9 = "9;Ôáù  "

format = <label-state>

label-focused = %icon%
label-focused-foreground = ${colors.fourth}
label-focused-padding = 1

;label-unfocused = ${self.label-focused}
;label-unfocused = %icon%
;label-unfocused-foreground = #0a7383
;label-unfocused-padding = ${self.label-focused-padding}

;label-visible = ${self.label-focused}
;label-visible = %icon%
;label-visible-foreground = #0a7383
;label-visible-padding = ${self.label-focused-padding}

label-occupied = %icon%
label-occupied-foreground = #0a7383
label-occupied-padding = ${self.label-focused-padding}

label-empty = %icon%
label-empty-padding = ${self.label-focused-padding}

label-urgent = ${self.label-focused}
;label-urgent = %icon%
label-urgent-foreground = ${colors.alert}
label-urgent-padding = ${self.label-focused-padding}

üì¶


[module/backlight]
type = internal/backlight
card = radeon_bl0

format = <label>
label = "Ôóù  %percentage%%"
label-foreground = ${colors.tertiary}


[module/wlan]
type = internal/network
interface = wlp7s0
interval = 3.0

format-connected = <label-connected>
format-connected-underline = #9f78e1
label-connected = "Ô™®"
label-connected-foreground = ${colors.primary}

format-disconnected = <label-disconnected>
format-disconnected-underline = ${self.format-connected-underline}
label-disconnected = Ô™©
label-disconnected-foreground = ${colors.alert}

; a = worst
ramp-signal-0 = a
ramp-signal-1 = b
ramp-signal-2 = c
ramp-signal-3 = d
ramp-signal-4 = e


[module/date]
type = internal/date
interval = 1

date =
date-alt = "%b %d, %Y  "
time = "%I:%M"
time-alt = "%H:%M:%S"

format-prefix-foreground = ${colors.foreground}
format-underline = #0a6cf5
label = %date%%time%


[module/audio]
type = internal/pulseaudio

format-volume = <ramp-volume>
label-volume-foreground = ${colors.secondary}
ramp-volume-foreground = ${colors.secondary}
label-volume = 

ramp-volume-0 = ÔÄ¶
ramp-volume-1 = ÔÄß
ramp-volume-2 = ÔÄ®

label-muted = Ô±ù
label-muted-foreground = ${colors.secondary}


[module/battery]
type = internal/battery
battery = BAT1
adapter = ADP1
full-at = 98

format-charging = <ramp-capacity>
format-discharging = <ramp-capacity>

label-full = Ôï∏ 
label-full-foreground = ${colors.fourth}

